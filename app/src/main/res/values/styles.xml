<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Card Style-->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_margin">@dimen/default_layout_margin</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/backWhite</item>
    </style>

    <!--Big Button Style-->
    <style name="BigButtonViewStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_layout_margin</item>
        <item name="android:background">@drawable/btn_round_corner</item>
    </style>

    <!--Small Button Style-->
    <style name="SmallButtonViewStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_margin">@dimen/default_layout_margin</item>

    </style>

    <!--Button text Style-->
    <style name="ButtonText" parent="BigText">
        <item name="android:textColor">@color/backWhite</item>
    </style>

    <!--Text View Style-->
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/BigText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/default_layout_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/score_time_corner</item>
    </style>

    <!--Big text Style-->
    <style name="BigText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <!--Small text style -->
    <style name="SmallText" parent="BigText">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>



</resources>