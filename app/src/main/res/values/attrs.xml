<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- custom attributes for the Loading Button Custom view-->

    <declare-styleable name="LoadingButton">
        <!--Background + Progress Bar -->
        <attr name="defaultBackgroundColor" format="color"/>
        <attr name="progressBarColor" format="color"/>
        <attr name="borderColor" format="color"/>
        <!--Text -->
        <attr name="defaultText" format="string"/>
        <attr name="loadingText" format="string"/>
        <attr name="completedText" format="string"/>
        <attr name="textColor" format="color"/>
        <!--Circle -->
        <attr name="defaultCircleColor" format="color"/>

    </declare-styleable>
</resources>